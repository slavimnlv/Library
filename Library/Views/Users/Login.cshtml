@model Library.ViewModels.Users.LoginVM
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sign in";
}


<fieldset>
    <legend>Sign in</legend>
    <form action="/Users/Login" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.Username)</div>
                <div class="col-2">@Html.TextBoxFor(m => m.Username)</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.Username)</div>
            </div>

            <div class="row">
                <div class="col-1">@Html.LabelFor(m => m.Password)</div>
                <div class="col-2">@Html.PasswordFor(m => m.Password)</div>
                <div class="col-2">@Html.ValidationMessageFor(m => m.Password)</div>
            </div>

            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    @Html.ValidationMessage("authError", new { @style = "right" })
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" value="Log in" />
                </div>
            </div>
        </div>
    </form>
</fieldset>