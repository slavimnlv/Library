@model Library.ViewModels.Books.DetailsVM

@{
    ViewData["title"] = "Book Details";
}

<h2 class="mx-auto text-center">Book Details</h2>

<div class="mx-auto w-75 text-center mt-4">
    <div class="d-flex w-25 mx-auto">
        <div class="fw-bold me-3">Title: </div>
        <div>@Model.Title</div>
    </div>
    <div class="d-flex w-25 mx-auto">
        <div class="fw-bold me-3">Author: </div>
        <div>@Model.Author</div>
    </div>
    <div class="d-flex w-25 mx-auto">
        <div class="fw-bold me-3">Year: </div>
        <div>@Model.Year</div>
    </div>
    <div class="d-flex w-25 mx-auto">
        <div class="fw-bold me-3">Count: </div>
        <div>@Model.Count</div>
    </div>

    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        <div class="d-flex w-25 mx-auto">
            <div class="fw-bold me-3">Reviews: </div>
            <div>
                <ul>
                    @foreach (var review in Model.Reviews)
                    {
                        <li>
                            <strong>Score: </strong> @review.Assessment
                            <br />
                            <strong>Comment: </strong> @review.Comment
                        </li>
                    }
                </ul>
            </div>
        </div>
    }

    @if (Model.Categories != null && Model.Categories.Any())
    {
        <div class="d-flex w-25 mx-auto">
            <div class="fw-bold me-3">Categories: </div>
            <div>
                <ul>
                    @foreach (var category in Model.Categories)
                    {
                        <li>@category.Name</li>
                    }
                </ul>
            </div>
        </div>
    }

    <div class="d-flex w-25 mx-auto">
        <a class="btn btn-warning me-3" href="@Url.Action("Edit", "Books", new { Id = Model.BookId})">Edit</a>
        <form class="me-3" action="/Books/Delete" method="post">
            @Html.HiddenFor(m => m.BookId)
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        @if(Model.Count > 0)
        {
            <form class="me-3" action="/Books/Borrow" method="post">
                @Html.HiddenFor(m => m.BookId)
                <button type="submit" class="btn btn-primary">Borrow</button>
            </form>
        }
        <form action="/Books/Return" method="post">
            @Html.HiddenFor(m => m.BookId)
            <button type="submit" class="btn btn-info">Return</button>
        </form>
        
    </div>
</div>

@{
    await Html.RenderPartialAsync("_ReviewPartial", Model.NewReview);
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
